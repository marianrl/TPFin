@model IEnumerable<TPFin.Models.Tag>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de Tags</h1>

<p>
    
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.palabra)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.palabra)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


<div>
    <a  class="btn mt-3 btn-outline-secondary" type="button"
         asp-controller="Home"
        asp-action="IndexAdmin">Volver al Home</a>
</div>
