@model TPFin.Models.Usuario

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

   if(null != TempData["Message"])
   {
      <script type="text/javascript">
       alert('@TempData["Message"]');
      </script>
   }

   if(null != TempData["MessageLoger"])
   {
      <script type="text/javascript">
       alert('@TempData["MessageLoger"]');
      </script>
   }
}

<h4>Bienvenido</h4>
<hr />
@using (Html.BeginForm("Index", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Index">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="email" class="control-label"></label>
                    <input asp-for="email" class="form-control mt-3" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="password" class="control-label "></label>
                    <input asp-for="password" class="form-control mt-3" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Ingresar" class="btn btn-primary mt-3" />
                    <a
                        type="button"
                        class="btn btn-warning mt-3"
                        asp-controller="Usuarios"
                        asp-action="Create"
                        >Registrate</a>
                </div>
            </form>
        </div>
    </div>
}


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
